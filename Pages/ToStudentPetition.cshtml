@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model RMS.Pages.ToStudentPetition

@{
    Layout = "~/Pages/Shared/_Layout1.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <title></title>
</head>
<body>
<div>
    <form method="post" id="mainForm">
        <div class="form-group">
            <label for="courseCode">Course Code:</label>
            <select class="form-control" id="courseCode" asp-for="courseCode" required>
                <option value="">Select Course Code</option>
                @foreach (var code in Model.CourseCodes)
                {
                    <option value="@code">@code </option>
                }
            </select>
        </div>     
        <button type="submit" class="btn btn-success">Submit</button>
    </form>
    
    <hr/>
    <table class="table">
        <tr>
            <th>Serial</th>
            <th>StudentID</th>
            <th>CourseCode</th>
            <th>Status</th>
        </tr>
        @foreach (System.Data.DataRow row in Model.PetitionTable.Rows)
        {
            <tr>
                <td>@row["PetNum"].ToString()</td>
                <td>@row["StudentID"].ToString()</td>
                <td>@row["CourseCode"].ToString()</td>
                <td>@row["Stat"].ToString()</td>
            </tr>
        }
    </table>
</div>
</body>
</html>