@page
@model RMS.Pages.ToItCreateStudent

@{
  Layout = "~/Pages/Shared/_ToIt.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <title></title>
</head>
<body>
<h1>Add Student</h1>
<br/>
<form method="post">
  <div class="form-group">
    <label for="Name">Name:</label>
    <input type="text" class="form-control" placeholder="Enter Name" id="Name" asp-for="@Model.Name" required/>
  </div>
  <div class="form-group">
    <label for="Address">Address:</label>
    <input type="text" class="form-control" placeholder="Enter Address" id="Address" asp-for="@Model.Address" required/>
  </div>

  <div class="form-group">
    <label for="PhoneNo">PhoneNo:</label>
    <input type="number" class="form-control" placeholder="Enter Name" id="PhoneNo" asp-for="@Model.PhoneNo" required/>
  </div>


  <div class="form-group">
      <label for="Major">Major:</label>
      <select class="form-control" id="Major" asp-for="@Model.Major" required>
          <option value="">Select Major</option>
          <option value="CSAI">CSAI</option>
          <option value="ENG">ENG</option>
          <option value="SCI">SCI</option>
      </select>
  </div>
  
  <div class="form-group">
    <label for="ID">ID:</label>
    <input type="number" class="form-control" placeholder="Enter Name" id="ID" asp-for="@Model.ID" required/>
  </div>
  <div class="form-group">
    <label for="pwd">Password:</label>
    <input type="password" class="form-control" placeholder="Enter password" id="pwd" asp-for="@Model.Password" required/>
  </div>

  <button type="submit" class="btn btn-primary" style="margin: 10px">Add Student</button>
</form>
</body>
</html>