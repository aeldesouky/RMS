@page
@model RMS.Pages.Student

@{
    ViewData["Title"] = "Student page";
}

<div class="container">
<form method="get">
    <div class="input-group">
        <label for="ID" class="input-group-prepend">
            <span class="input-group-text">ID</span>
        </label>
        <input type="text" class="form-control" id="ID" name="ID" value="@Model.ID" placeholder="Enter UST ID here...">
        <div class="input-group-append">
            <button class="btn btn-primary" type="submit">Search</button>
        </div>
    </div>
</form>
</div><hr/>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            <div class="card mt-5">
                <div class="card-header text-center">
                    <h5>Student Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6">
                            <p><strong>ID:</strong> @Model.ID</p>
                            <p><strong>Name:</strong> @Model.Name</p>
                            <p><strong>Address:</strong> @Model.Address</p>
                        </div>
                        <div class="col-6">
                            <p><strong>Major:</strong> @Model.Major</p>
                            <p><strong>cGPA:</strong> @Model.cGPA</p>
                            <p><strong>Phone:</strong> @Model.PhoneNo</p>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <form method="post">
                        <button type="button" class="btn btn-secondary btn-block" onclick="location.href='/Student'">Clear</button>
                        @*<button type="button" class="btn btn-secondary btn-block" onclick="location.href='/Edit?ID=@Model.ID'">Edit</button>*@
                        <button type="button" class="btn btn-secondary btn-block" onclick="location.href='/Edit?ID=@Model.ID'">Edit</button>
                        <button type="submit" class="btn btn-secondary btn-block" method="post" asp-page-handler="Delete">Delete</button>
                        <button type="button" class="btn btn-secondary btn-block" onclick="location.href='/Report'">Grade Report</button>
                        <button type="button" class="btn btn-secondary btn-block" onclick="location.href='/Schedule'">Schedule</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>





