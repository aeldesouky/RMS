@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    Layout = "~/Pages/Shared/_LayoutNoNav.cshtml";
    
}
<div class="container text-center pt-4">
  <h1 >welcome To  The LoginPage</h1>
</div>
<div class="shadow" style="height: 500px">
<section class="vh-100">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5" style="padding: 50px">
        <img src="https://raw.githubusercontent.com/abdullahyasser0/python/main/Zewailcity.png"
             class="img-fluid" alt="Sample image">
      </div>
      
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
        <form method="post">
          <div class="form-outline mb-4">
            <input type="number" id="form3Example3" class="form-control form-control-lg" name="UserID"
                   placeholder="Enter a valid UserID" required />
            <label class="form-label" for="form3Example3">UserID</label>
          </div>

          <!-- Password input -->
          <div class="form-outline mb-3">
            <input type="password" id="form3Example4" class="form-control form-control-lg" name="password"
                   placeholder="Enter password" required />
            <label class="form-label" for="form3Example4">Password</label>
          </div>

          <div class="text-center text-lg-start mt-4 pt-2">
            <button type="submit" class="btn btn-primary btn-lg" asp-page-handler="AdminLogin"
                    style="padding-left: 2.5rem; padding-right: 2.5rem; margin: auto ">Admin Login</button>
            <button type="submit" class="btn btn-primary btn-lg" asp-page-handler="StudentLogin"
                    style="padding-right: 2.5rem; padding-left: 2.5rem; margin: auto">Student Login</button>
            <button type="submit" class="btn btn-primary btn-lg" asp-page-handler="ProfLogin"
                    style="padding-right: 2.5rem; padding-left: 2.5rem; margin: auto ">Prof Login</button>
             <button type="submit" class="btn btn-primary btn-lg" asp-page-handler="ITLogin"
                                style="padding-right: 2.5rem; padding-left: 2.5rem; margin: 20px ">IT Login</button>
          </div>
        </form>
      </div>
    </div>
  </div>
 
</section>
 </div>
